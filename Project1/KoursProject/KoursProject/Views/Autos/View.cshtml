@model KoursProject.Models.UpdateAutosViewModel

@{
}

<h1>Изменить иформацию</h1>
<form method="post" action="View">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Автомобиль</label>
        <input type="text" class="form-control" asp-for="Car">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Гос. регистрационный знак</label>
        <input type="text" class="form-control" asp-for="Carnumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Состояние</label>
        <input type="text" class="form-control" asp-for="Condition">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>

    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Autos">Удалить</button>
</form>