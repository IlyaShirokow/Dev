@model IList<KoursProject.Models.Domain.Autos>

@{
}

<h1>Автомобили</h1>
<a type="submit" class="btn btn-primary" asp-area="" asp-controller="Autos" asp-action="Add">Добаить запись в таблицу</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Автомобиль</th>
            <th>Гос. регистрационный знак</th>
            <th>Состояние</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auto in Model)
        {
            <tr>
                <td>@auto.Id</td>
                <td>@auto.Car</td>
                <td>@auto.Carnumber</td>
                <td>@auto.Condition</td>
                <td><a href="Autos/View/@auto.Id">Просмотреть</a></td>
            </tr>
        }
    </tbody>
</table>