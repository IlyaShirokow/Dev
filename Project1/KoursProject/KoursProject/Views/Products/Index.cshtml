@model IList<KoursProject.Models.Domain.Products>

@{
}

<h1>Продукты</h1>
<a type="submit" class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Add">Добаить запись в таблицу</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название продукта</th>
            <th>Хрупкость</th>
            <th>Размер</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Product</td>
                <td>@product.Fragility</td>
                <td>@product.Dimension</td>
                <td><a href="Products/View/@product.Id">Просмотреть</a></td>
            </tr>
        }
    </tbody>
</table>