@model KoursProject.Models.UpdateProductsViewModel

@{
}

<h1>Изменить иформацию</h1>
<form method="post" action="View">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Название продукта</label>
        <input type="text" class="form-control" asp-for="Product">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Хрупкость</label>
        <input type="text" class="form-control" asp-for="Fragility">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Размер</label>
        <input type="text" class="form-control" asp-for="Dimension">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>

    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Products">Удалить</button>
</form>